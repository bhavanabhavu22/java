/Singly Circular Linked List/
class Node {
    int data;
    Node next;

    // Constructor
    Node(int data) {
        this.data = data;
        this.next = null;     
    }
}

class Single_Circular_Linked_List_Methods {
    private Node head=null;

    //inserting at end
    public void insertAtEnd(int data) {
        Node newNode=new Node(data);

        if(head==null) {
            head=newNode;
            newNode.next=head;
            return;
        }
        Node temp=head;
        while(temp.next!=head) {
            temp=temp.next;
        }
        temp.next=newNode;
        newNode.next = head;
    }

    //inserting at first
    public void insertAtFirst(int data) {
        Node newNode = new Node(data);

        if (head == null) {
            head = newNode;
            newNode.next = head;
            return;
        }
        Node temp = head;
        while (temp.next != head) {
            temp = temp.next; 
        }
        newNode.next = head;
        temp.next = newNode;
        head = newNode;

    }

    //Insert at a particular position
    public void insertAtPos(int data, int pos) {
        Node newNode = new Node(data);
        if (pos == 1) {
            insertAtFirst(data);
            return;
        }
        Node temp = head;
        for (int i = 1; i < pos - 1 ; i++) {
        temp = temp.next;
        } 
        if(temp== head) {
            return;
        }
        newNode.next = temp.next;
        temp.next = newNode;
    }
    // Delete at beginning
    public void deleteFirst() {
        if (head == null) {
            System.out.println("Empty list");
            return;
        }

        System.out.println("Deleted: " + head.data);
        if (head.next == head) {  
            head = null;
            return;
        }
        Node temp = head;
        while (temp.next != head) {
            temp = temp.next; 
        }
        head = head.next;
        temp.next = head;
    }

    // Delete at end 
    public void deleteEnd() {
        if (head == null) {
            System.out.println("Empty list");
            return;
        }
        if (head.next == head) {
            System.out.println("Deleted: " + head.data);
            head = null;
            return;
        }
        Node temp = head;
        while (temp.next.next != head) {
            temp = temp.next;
        }
        System.out.println("Deleted: " + temp.next.data);
        temp.next = head;
    }

    //delete at a particular position
    public void deleteAtPos(int pos) {
        if (head == null) {
            System.out.println("Empty list");
            return;
        }
        if (pos == 1) {
            deleteFirst();
            return;
        }
        Node temp = head;
        for (int i = 1; i < pos - 1; i++) {
            temp = temp.next;
            if (temp == head) {
                System.out.println("Invalid position");
                return;
            }
        }
        Node deleteNode = temp.next;
        if (deleteNode == head) {
            System.out.println("Invalid position");
            return;
        }
        System.out.println("Deleted: " + deleteNode.data);
        temp.next = deleteNode.next;
    }
    //display
    public void display() {
        if(head==null) {
            System.out.println("No data");
        }
    Node temp=head;
    do { 
        System.out.print(temp.data+ "->");
        temp=temp.next;
    } while (temp!=head);
    System.out.println("head");
    }
     
}

public class Singly_Circular_Linked_List {
    public static void main(String[] args) {
        Single_Circular_Linked_List_Methods cll=new Single_Circular_Linked_List_Methods();
        cll.insertAtEnd(10);
        cll.insertAtEnd(20);
        cll.insertAtEnd(30);
        cll.insertAtFirst(50);
        cll.display();
        cll.insertAtPos(15, 3);
        cll.display();
        cll.deleteFirst();
        cll.display();
        cll.deleteEnd();
        cll.display();
        cll.deleteAtPos(2);
        cll.display();
    }
}
