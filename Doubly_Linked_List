/Doubly Linked List Methods/
class Node {
    int data;
    Node next;
    Node prev;

    // Constructor
    Node(int data) {
        this.data = data;
        this.next = null;
        this.prev = null;     
    }
}

class DoublyLinkedListMethods {
    private Node head = null;
    private Node tail = null;

    // Add at End
    public void addEnd(int data) {
        Node newNode = new Node(data);

        if (tail == null) {   // empty list
            head = tail = newNode;
            return;
        }

        tail.next = newNode;
        newNode.prev = tail;
        tail = newNode;
    }

    // Add at Beginning
    public void addFirst(int data) {
        Node newNode = new Node(data);

        if (head == null) {   // empty list
            head = tail = newNode;
            return;
        }

        newNode.next = head;
        head.prev = newNode;
        head = newNode;
    }

    //Delete at End
    public void deleteEnd() {
        if(tail==null) {
            System.out.println("Empty");
            return;
        }
        tail=tail.prev;
        if (tail != null) {
            tail.next=null;       
        } else {
            head = null;   // detach last node
            }
            System.out.println("Deleted element at end: " + tail.data);
        }

        //Delete from first
        public void deleteFirst() {
            if(head==null) {
                System.out.println("Empty");
                return;
            }
            head=head.next;
            if (head != null) { 
                head.prev = null;
            } else {
                tail = null; // list became empty
            }
            System.out.println("Deleted element at end: " + head.data);
        }

    // Forward Traversal
    public void forwardTraversal() {
        Node temp = head;

        while (temp != null) {
            System.out.print(temp.data + " -> ");
            temp = temp.next;
        }
        System.out.println("null");
    }
    //backward traversal
    public void backwardTraversal() {
        Node temp=tail;
        while(temp!=null) {
            System.out.print(temp.data+"<-");
            temp=temp.prev;
        }
        System.out.println("null");
    }

}

public class Doubly_Linked_List {
    public static void main(String[] args) {
        DoublyLinkedListMethods d = new DoublyLinkedListMethods();
        d.addFirst(20);
        d.addFirst(10);
        d.addEnd(30);
        d.addEnd(40);
        d.forwardTraversal();
        d.backwardTraversal();
        
        d.deleteFirst();
        d.forwardTraversal();

        d.deleteEnd();
        d.forwardTraversal();
    }
}
