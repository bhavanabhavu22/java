public class MaxNonAdjacentSum {
    public static int maxSum(int[] arr) {
        int i = 0; 
        int j = 0;  
        for (int x : arr) {
            int temp = Math.max(i, j);  
            i = j + x;  
            j = temp;  
        }        
        return Math.max(i, j);
    }
    public static void main(String[] args) { 
        int[] arr = {3, 2, 5, 10, 7};
        System.out.println("sum = " + maxSum(arr));
    }
}
