public class toFindChatInLinear {
    public static void main(String[] args) {

        String str = "apple";
        char target = 'a';

        char[] arr = str.toCharArray(); 
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] == target) {  
                arr[i] = '*';        
            }
        }

        String result = new String(arr);

        System.out.println( str);
        System.out.println(result);
    }
}
