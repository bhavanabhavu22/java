class Node {
    int data;
    Node left;
    Node right;

    Node(int data) {
        this.data = data;
        left=right=null;
    }
}

class BinaryTree {
    Node root;

    BinaryTree() {
        this.root=null;
    }
    //Inorder Traversal
    public void inOrder(Node node) {
        if (node==null) {
            return;
        }
        inOrder(node.left);
        System.out.print(node.data+" ");
        inOrder(node.right);
    }
    //Preorder Traversal
    public void preOrder(Node node) {
        if(node == null) {
            return;
        }
        System.out.print(node.data+" ");
        preOrder(node.left);
        preOrder(node.right);
    }
    //Postorder Traversal
    public void postOrder(Node node) {
        if(node == null) {
            return;
        }
        postOrder(node.left);
        postOrder(node.right);
        System.out.print(node.data+" ");
    }
    //Count NUmber of NOdes
    public int countOfNodes(Node node) {
        if(node == null) {
            return 0;
        }
        return 1+ countOfNodes(node.left) + countOfNodes(node.right); 
    }
    //Height of a tree
    public int height(Node node) {
        if(node == null) { // if empty 
            return 0;
        }
        return 1+Math.max(height(node.left),height(node.right));
    }
    // sum of the nodes  data (all data in node adding)
    public int SumOfAllNodes(Node node){
        if(node==null){
            return 0;
        }
        return node.data + SumOfAllNodes(node.left)+SumOfAllNodes(node.right);
    }

    
}

public class Trees {
    public static void main(String[] args) {
        BinaryTree tree = new BinaryTree();
        tree.root = new Node(1);
        tree.root.left = new Node(2);
        tree.root.right = new Node(3);
        tree.root.left.left = new Node(4);
        tree.root.left.right = new Node(5);
        tree.root.right.left = new Node(6);
        tree.root.right.right = new Node(7);
        System.out.println("Inorder:");
        tree.inOrder(tree.root);
        System.out.println("\npreorder:");
        tree.preOrder(tree.root);
        System.out.println("\npostorder:");
        tree.postOrder(tree.root);
        int count=tree.countOfNodes(tree.root);
        System.out.println("\nNumber of Nodes "+count);
        int h = tree.height(tree.root); 
        System.out.println("Height of tree: " + h);
        int Sum=tree.SumOfAllNodes(tree.root);
        System.out.println("count  of nodes:"+Sum);
    }
}
